<Window x:Class="RF.ExponentCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RF.ExponentCalc"
        mc:Ignorable="d"
        Title="Exponent Calculator" Height="250" Width="610" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged" ResizeMode="CanMinimize" WindowStyle="ThreeDBorderWindow" Background="White">
    <Grid x:Name="grdMain" Margin="0,0,-6,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="303*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFDFE0D9" Offset="0"/>
                <GradientStop Color="#FF5A8D66" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>
</Window>
